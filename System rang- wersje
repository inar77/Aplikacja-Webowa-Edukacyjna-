// ============================================
// KOMPONENTY UI
// ============================================

const RankCard = ({ rank, currentXP, nextRank, isActive }) => {
  const progress = nextRank 
    ? ((currentXP - rank.xp) / (nextRank.xp - rank.xp)) * 100
    : 100;

  return (
    <div className={`relative p-6 rounded-2xl transition-all duration-500 ${
      isActive 
        ? 'bg-gradient-to-br from-blue-600 to-purple-600 text-white scale-105 shadow-2xl' 
        : 'bg-gray-100 opacity-50'
    }`}>
      {isActive && (
        <div className="absolute -top-3 -right-3 bg-yellow-400 text-black px-3 py-1 rounded-full text-sm font-bold animate-pulse">
          OBECNA RANGA
        </div>
      )}
      
      <div className="flex items-center justify-between mb-4">
        <div className="text-5xl">{rank.icon}</div>
        <div className="text-right">
          <div className="text-sm opacity-75">Poziom {rank.level}</div>
          <div className="font-bold">{rank.xp} XP</div>
        </div>
      </div>
      
      <h3 className="text-xl font-bold mb-1">{rank.title}</h3>
      <p className={`text-sm ${isActive ? 'text-white/80' : 'text-gray-600'}`}>
        {rank.subtitle}
      </p>
      
      {isActive && nextRank && (
        <div className="mt-4">
          <div className="flex justify-between text-xs mb-1">
            <span>Postƒôp do awansu</span>
            <span>{Math.round(progress)}%</span>
          </div>
          <div className="h-2 bg-white/20 rounded-full overflow-hidden">
            <div 
              className="h-full bg-white transition-all duration-1000"
              style={{ width: `${progress}%` }}
            />
          </div>
        </div>
      )}
    </div>
  );
};

const AchievementBadge = ({ achievement, unlocked }) => (
  <div className={`p-4 rounded-xl transition-all ${
    unlocked 
      ? 'bg-gradient-to-br from-yellow-400 to-orange-400 text-white' 
      : 'bg-gray-200 text-gray-400'
  }`}>
    <div className="text-3xl mb-2">{unlocked ? 'üèÜ' : 'üîí'}</div>
    <div className="text-sm font-semibold">{achievement}</div>
  </div>
);

// ============================================
// G≈Å√ìWNY SYSTEM RANG
// ============================================

const ProfessionalRankSystem = () => {
  const [selectedCareer, setSelectedCareer] = useState('construction');
  const [userXP, setUserXP] = useState(2100);
  const [showRankUp, setShowRankUp] = useState(false);
  const [unlockedAchievements, setUnlockedAchievements] = useState(['pierwsza_cegla']);
  
  const career = ProfessionalRanks[selectedCareer];
  const currentRank = career.ranks.findLast(r => r.xp <= userXP) || career.ranks[0];
  const currentRankIndex = career.ranks.indexOf(currentRank);
  const nextRank = career.ranks[currentRankIndex + 1];

  // Simulate XP gain
  const addXP = (amount) => {
    const newXP = userXP + amount;
    setUserXP(newXP);
    
    // Check for rank up
    if (nextRank && newXP >= nextRank.xp) {
      setShowRankUp(true);
      setTimeout(() => setShowRankUp(false), 3000);
    }
  };

  return (
    <div className="min-h-screen bg-gradient-to-br from-gray-900 via-gray-800 to-gray-900 text-white p-6">
      {/* Rank Up Animation */}
      {showRankUp && (
        <div className="fixed inset-0 bg-black/50 flex items-center justify-center z-50 animate-pulse">
          <div className="bg-white text-black p-8 rounded-3xl text-center transform scale-110">
            <div className="text-6xl mb-4">üéâ</div>
            <h2 className="text-3xl font-bold mb-2">AWANS!</h2>
            <p className="text-xl">Zosta≈Çe≈õ: {nextRank?.title}</p>
          </div>
        </div>
      )}

      <div className="max-w-6xl mx-auto">
        {/* Header */}
        <div className="text-center mb-8">
          <h1 className="text-4xl font-bold mb-2">System Rang Zawodowych</h1>
          <p className="text-gray-400">Prawdziwe nazwy, prawdziwy progres</p>
        </div>

        {/* Career Selector */}
        <div className="mb-8">
          <h2 className="text-xl font-semibold mb-4">Wybierz swojƒÖ ≈õcie≈ºkƒô:</h2>
          <div className="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-5 gap-3">
            {Object.entries(ProfessionalRanks).map(([key, prof]) => (
              <button
                key={key}
                onClick={() => setSelectedCareer(key)}
                className={`p-4 rounded-xl transition-all ${
                  selectedCareer === key
                    ? 'bg-gradient-to-br from-blue-600 to-purple-600'
                    : 'bg-gray-800 hover:bg-gray-700'
                }`}
              >
                <div className="text-3xl mb-2">{prof.icon}</div>
                <div className="text-sm font-semibold">{prof.name}</div>
              </button>
            ))}
          </div>
        </div>

        {/* Current Status */}
        <div className="bg-gray-800/50 backdrop-blur rounded-3xl p-6 mb-8">
          <div className="flex items-center justify-between mb-4">
            <div>
              <h2 className="text-2xl font-bold">{career.name}</h2>
              <p className="text-gray-400">Twoja obecna pozycja w hierarchii</p>
            </div>
            <div className="text-right">
              <div className="text-3xl font-bold">{userXP} XP</div>
              <button
                onClick={() => addXP(250)}
                className="mt-2 px-4 py-2 bg-green-600 rounded-lg hover:bg-green-700 transition-all"
              >
                +250 XP (Uko≈Ñcz zadanie)
              </button>
            </div>
          </div>

          {/* Progress to next rank */}
          {nextRank && (
            <div className="bg-gray-900/50 rounded-xl p-4">
              <div className="flex justify-between items-center mb-2">
                <span>Do awansu na: <strong>{nextRank.title}</strong></span>
                <span className="text-yellow-400 font-bold">
                  {nextRank.xp - userXP} XP
                </span>
              </div>
              <div className="h-3 bg-gray-700 rounded-full overflow-hidden">
                <div 
                  className="h-full bg-gradient-to-r from-green-500 to-blue-500 transition-all duration-1000"
                  style={{ 
                    width: `${((userXP - currentRank.xp) / (nextRank.xp - currentRank.xp)) * 100}%` 
                  }}
                />
              </div>
            </div>
          )}
        </div>

        {/* Ranks Progression */}
        <div className="mb-8">
          <h3 className="text-xl font-semibold mb-4">≈öcie≈ºka kariery:</h3>
          <div className="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
            {career.ranks.map((rank, idx) => (
              <RankCard
                key={idx}
                rank={rank}
                currentXP={userXP}
                nextRank={career.ranks[idx + 1]}
                isActive={rank === currentRank}
              />
            ))}
          </div>
        </div>

        {/* Achievements */}
        <div>
          <h3 className="text-xl font-semibold mb-4">Odznaki bran≈ºowe:</h3>
          <div className="grid grid-cols-2 md:grid-cols-3 gap-4">
            {Object.entries(career.achievements).map(([key, achievement]) => (
              <AchievementBadge
                key={key}
                achievement={achievement}
                unlocked={unlockedAchievements.includes(key)}
              />
            ))}
          </div>
        </div>

        {/* Motivational Quote */}
        <div className="mt-12 text-center p-6 bg-gradient-to-r from-blue-900/50 to-purple-900/50 rounded-2xl">
          <p className="text-lg italic">
            "{currentRank.title} to nie tylko tytu≈Ç - to do≈õwiadczenie zdobyte w≈Çasnymi rƒôkami."
          </p>
          <p className="text-sm text-gray-400 mt-2">
            - Ka≈ºdy mistrz kiedy≈õ by≈Ç uczniem
          </p>
        </div>
      </div>
    </div>
  );
};

export default ProfessionalRankSystem;




