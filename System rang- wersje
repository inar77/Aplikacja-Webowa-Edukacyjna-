// ============================================
// EFEKTY WIZUALNE I ANIMACJE
// ============================================

const FloatingParticle = ({ emoji, delay }) => (
  <div 
    className="absolute animate-float opacity-20"
    style={{
      left: `${Math.random() * 100}%`,
      animationDelay: `${delay}s`,
      animationDuration: `${10 + Math.random() * 10}s`
    }}
  >
    <div className="text-6xl">{emoji}</div>
  </div>
);

// ============================================
// KOMPONENTY UI
// ============================================

const RankCard = ({ rank, currentXP, nextRank, isActive, theme }) => {
  const progress = nextRank 
    ? ((currentXP - rank.xp) / (nextRank.xp - rank.xp)) * 100
    : 100;

  return (
    <div className={`relative p-6 rounded-2xl transition-all duration-500 backdrop-blur-md ${
      isActive 
        ? `bg-gradient-to-br ${theme.primary} text-white scale-105 shadow-2xl ring-4 ring-white/20` 
        : 'bg-gray-800/50 opacity-50'
    }`}>
      {isActive && (
        <>
          <div className="absolute -top-3 -right-3 bg-yellow-400 text-black px-3 py-1 rounded-full text-sm font-bold animate-pulse">
            OBECNA RANGA
          </div>
          <div className="absolute inset-0 bg-gradient-to-t from-black/20 to-transparent rounded-2xl"></div>
        </>
      )}
      
      <div className="relative z-10">
        <div className="flex items-center justify-between mb-4">
          <div className="text-5xl animate-bounce-slow">{rank.icon}</div>
          <div className="text-right">
            <div className="text-sm opacity-75">Poziom {rank.level}</div>
            <div className="font-bold">{rank.xp} XP</div>
          </div>
        </div>
        
        <h3 className="text-xl font-bold mb-1">{rank.title}</h3>
        <p className={`text-sm ${isActive ? 'text-white/80' : 'text-gray-400'}`}>
          {rank.subtitle}
