'use client';

import React, { useState, useEffect, useRef } from 'react';
import { motion, AnimatePresence, useMotionValue, useTransform, useSpring } from 'framer-motion';
import { 
  Lock, 
  Play, 
  CheckCircle, 
  Zap, 
  Clock, 
  Award, 
  TrendingUp, 
  BookOpen,
  ChevronRight,
  Star,
  Flame,
  Trophy,
  Target,
  Sparkles,
  ArrowRight,
  User,
  Calendar,
  BarChart3,
  Layers
} from 'lucide-react';
import { cn } from '@/lib/utils';

// ==================== TYPES ====================

interface Skill {
  name: string;
  level: number;
  maxLevel: number;
}

interface Achievement {
  id: string;
  title: string;
  description: string;
  icon: React.ReactNode;
  unlocked: boolean;
  progress?: number;
  requirement?: string;
}

interface LessonStats {
  avgCompletionTime: string;
  difficulty: 'easy' | 'medium' | 'hard' | 'expert';
  completionRate: number;
  enrolledUsers: number;
  rating: number;
  reviewCount: number;
}

interface LessonModule {
  id: string;
  title: string;
  duration: string;
  type: 'video' | 'quiz' | 'practice' | 'reading';
  completed: boolean;
}

interface ExtendedLessonCardProps {
  id: string;
  title: string;
  description: string;
  longDescription?: string;
  duration: string;
  xp: number;
  status: 'locked' | 'unlocked' | 'completed' | 'in-progress';
  progress?: number;
  category: string;
  thumbnailUrl?: string;
  instructor?: {
    name: string;
    avatar: string;
    title: string;
  };
  skills?: Skill[];
  prerequisites?: string[];
  modules?: LessonModule[];
  stats?: LessonStats;
  achievements?: Achievement[];
  streak?: number;
  deadline?: Date;
  tags?: string[];
  onClick?: () => void;
  onBookmark?: () => void;
  onShare?: () => void;
  isBookmarked?: boolean;
  estimatedCompletionDate?: Date;
  nextAvailableDate?: Date;
}

// ==================== MAIN COMPONENT ====================

export const AdvancedLessonCard: React.FC<ExtendedLessonCardProps> = ({
  id,
  title,
  description,
  longDescription,
  duration,
  xp,
  status,
  progress = 0,
  category,
  thumbnailUrl,
  instructor,
  skills = [],
  prerequisites = [],
  modules = [],
  stats,
  achievements = [],
  streak = 0,
  deadline,
  tags = [],
  onClick,
  onBookmark,
  onShare,
  isBookmarked = false,
  estimatedCompletionDate,
  nextAvailableDate
}) => {
  
  const [isExpanded, setIsExpanded] = useState(false);
  const [isHovered, setIsHovered] = useState(false);
  const [showTooltip, setShowTooltip] = useState(false);
  const [activeTab, setActiveTab] = useState<'overview' | 'modules' | 'achievements'>('overview');
  const cardRef = useRef<HTMLDivElement>(null);
  
  const mouseX = useMotionValue(0);
  const mouseY = useMotionValue(0);
  
  const rotateX = useTransform(mouseY, [-100, 100], [5, -5]);
  const rotateY = useTransform(mouseX, [-100, 100], [-5, 5]);
  
  const springConfig = { stiffness: 300, damping: 30 };
  const rotateXSpring = useSpring(rotateX, springConfig);
  const rotateYSpring = useSpring(rotateY, springConfig);

  const isLocked = status === 'locked';
  const isCompleted = status === 'completed';
  const isInProgress = status === 'in-progress';

  useEffect(() => {
    const handleMouseMove = (e: MouseEvent) => {
      if (!cardRef.current || !isHovered) return;
      
      const rect = cardRef.current.getBoundingClientRect();
      const centerX = rect.left + rect.width / 2;
      const centerY = rect.top + rect.height / 2;
      
      mouseX.set(e.clientX - centerX);
      mouseY.set(e.clientY - centerY);
    };

    window.addEventListener('mousemove', handleMouseMove);
    return () => window.removeEventListener('mousemove', handleMouseMove);
  }, [isHovered, mouseX, mouseY]);

  const handleCardClick = () => {
    if (isLocked) return;
    if (isExpanded) {
      onClick?.();
    } else {
      setIsExpanded(true);
    }
  };

  const getDifficultyColor = (difficulty?: string) => {
    switch (difficulty) {
      case 'easy': return 'text-green-600 bg-green-100';
      case 'medium': return 'text-yellow-600 bg-yellow-100';
      case 'hard': return 'text-orange-600 bg-orange-100';
      case 'expert': return 'text-red-600 bg-red-100';
      default: return 'text-slate-600 bg-slate-100';
    }
  };

  const getStatusBadge = () => {
    if (isCompleted) {
      return (
        <div className="flex items-center gap-1.5 px-3 py-1.5 bg-green-500 text-white rounded-full text-xs font-bold shadow-lg shadow-green-500/30">
          <CheckCircle size={14} />
          <span>Ukończono</span>
        </div>
      );
    }
    if (isInProgress) {
      return (
        <div className="flex items-center gap-1.5 px-3 py-1.5 bg-blue-500 text-white rounded-full text-xs font-bold shadow-lg shadow-blue-500/30 animate-pulse">
          <Flame size={14} />
          <span>W trakcie</span>
        </div>
      );
    }
    if (isLocked) {
      return (
        <div className="flex items-center gap-1.5 px-3 py-1.5 bg-slate-400 text-white rounded-full text-xs font-bold">
          <Lock size={14} />
          <span>Zablokowane</span>
        </div>
      );
    }
    return (
      <div className="flex items-center gap-1.5 px-3 py-1.5 bg-purple-500 text-white rounded-full text-xs font-bold shadow-lg shadow-purple-500/30">
        <Sparkles size={14} />
        <span>Dostępne</span>
      </div>
    );
  };

  const calculateTimeRemaining = (deadline?: Date) => {
    if (!deadline) return null;
    const now = new Date();
    const diff = deadline.getTime() - now.getTime();
    const days = Math.floor(diff / (1000 * 60 * 60 * 24));
    const hours = Math.floor((diff % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
    return { days, hours, isUrgent: days < 2 };
  };

  const timeRemaining = calculateTimeRemaining(deadline);

  return (
    <motion.div
      ref={cardRef}
      layout
      initial={{ opacity: 0, y: 20 }}
      animate={{ opacity: 1, y: 0 }}
      exit={{ opacity: 0, y: -20 }}
      transition={{ duration: 0.3 }}
      onHoverStart={() => setIsHovered(true)}
      onHoverEnd={() => {
        setIsHovered(false);
        mouseX.set(0);
        mouseY.set(0);
      }}
      style={{
        rotateX: !isExpanded && !isLocked ? rotateXSpring : 0,
        rotateY: !isExpanded && !isLocked ? rotateYSpring : 0,
        transformStyle: 'preserve-3d',
      }}
      className={cn(
        "relative rounded-3xl overflow-hidden transition-all duration-500",
        isExpanded ? "col-span-full max-w-5xl mx-auto" : "max-w-md",
        isLocked 
          ? "bg-slate-100 border-2 border-slate-200 opacity-80 cursor-not-allowed" 
          : "bg-white border-2 border-slate-200 shadow-xl hover:shadow-2xl cursor-pointer",
        isCompleted && "border-green-300 bg-gradient-to-br from-green-50 to-white",
        isInProgress && "border-blue-300 bg-gradient-to-br from-blue-50 to-white"
      )}
    >
      {/* Animated Background Gradient */}
      {!isLocked && (
        <motion.div
          className="absolute inset-0 opacity-0 group-hover:opacity-100 transition-opacity duration-500"
          style={{
            background: isCompleted 
              ? 'radial-gradient(circle at top right, rgba(34, 197, 94, 0.1), transparent)'
              : 'radial-gradient(circle at top right, rgba(59, 130, 246, 0.1), transparent)',
          }}
        />
      )}

      {/* Progress Bar Top */}
      {!isLocked && !isCompleted && progress > 0 && (
        <div className="absolute top-0 left-0 right-0 h-1.5 bg-slate-200 z-10">
          <motion.div
            initial={{ width: 0 }}
            animate={{ width: `${progress}%` }}
            transition={{ duration: 1, ease: "easeOut" }}
            className="h-full bg-gradient-to-r from-blue-500 via-purple-500 to-pink-500 relative"
          >
            <motion.div
              className="absolute right-0 top-0 bottom-0 w-20 bg-gradient-to-r from-transparent to-white/50"
              animate={{ x: ['-100%', '100%'] }}
              transition={{ repeat: Infinity, duration: 1.5, ease: "linear" }}
            />
          </motion.div>
        </div>
      )}

      {/* Streak Badge */}
      {streak > 0 && !isLocked && (
        <motion.div
          initial={{ scale: 0, rotate: -180 }}
          animate={{ scale: 1, rotate: 0 }}
          className="absolute top-4 right-4 z-20 flex items-center gap-1.5 px-3 py-1.5 bg-orange-500 text-white rounded-full text-xs font-bold shadow-lg"
        >
          <Flame size={14} fill="currentColor" />
          <span>{streak} dni z rzędu!</span>
        </motion.div>
      )}

      {/* Thumbnail Section */}
      {thumbnailUrl && !isExpanded && (
        <div className="relative h-48 overflow-hidden">
          <motion.img
            src={thumbnailUrl}
            alt={title}
            className="w-full h-full object-cover"
            whileHover={{ scale: 1.05 }}
            transition={{ duration: 0.3 }}
          />
          <div className="absolute inset-0 bg-gradient-to-t from-black/60 via-transparent to-transparent" />
          
          {/* Floating Action Buttons */}
          <div className="absolute top-4 left-4 flex gap-2">
            {getStatusBadge()}
          </div>

          {/* Category Badge */}
          <div className="absolute bottom-4 left-4">
            <span className="px-3 py-1.5 bg-white/95 backdrop-blur-sm text-slate-900 rounded-full text-xs font-bold shadow-lg">
              {category}
            </span>
          </div>

          {/* Quick Actions */}
          <div className="absolute bottom-4 right-4 flex gap-2 opacity-0 hover:opacity-100 transition-opacity">
            <motion.button
              whileHover={{ scale: 1.1 }}
              whileTap={{ scale: 0.9 }}
              onClick={(e) => {
                e.stopPropagation();
                onBookmark?.();
              }}
              className="p-2 bg-white/95 backdrop-blur-sm rounded-full shadow-lg"
            >
              <Star size={16} className={isBookmarked ? "fill-yellow-400 text-yellow-400" : "text-slate-600"} />
            </motion.button>
          </div>
        </div>
      )}

      {/* Main Content */}
      <div className="p-6 relative z-10" onClick={handleCardClick}>
        
        {/* Header */}
        {isExpanded && (
          <div className="flex items-start justify-between mb-6">
            <div className="flex-1">
              <div className="flex items-center gap-3 mb-4">
                {getStatusBadge()}
                {stats && (
                  <span className={cn("px-3 py-1 rounded-full text-xs font-bold", getDifficultyColor(stats.difficulty))}>
                    {stats.difficulty.toUpperCase()}
                  </span>
                )}
              </div>
              <h2 className="text-3xl font-bold text-slate-900 mb-2">{title}</h2>
              <p className="text-slate-600 text-base">{longDescription || description}</p>
            </div>
            <motion.button
              whileHover={{ scale: 1.1, rotate: 90 }}
              whileTap={{ scale: 0.9 }}
              onClick={(e) => {
                e.stopPropagation();
                setIsExpanded(false);
              }}
              className="p-2 hover:bg-slate-100 rounded-full transition-colors"
            >
              <ChevronRight size={24} className="text-slate-400" />
            </motion.button>
          </div>
        )}

        {!isExpanded && (
          <>
            <h3 className="text-xl font-bold text-slate-900 mb-2 line-clamp-2">{title}</h3>
            <p className="text-sm text-slate-600 mb-4 line-clamp-2">{description}</p>
          </>
        )}

        {/* Stats Grid */}
        <div className={cn(
          "grid gap-3 mb-6",
          isExpanded ? "grid-cols-2 md:grid-cols-4" : "grid-cols-2"
        )}>
          <div className="flex items-center gap-2 p-3 bg-slate-50 rounded-xl">
            <Clock size={18} className="text-blue-600" />
            <div>
              <p className="text-xs text-slate-500 font-medium">Czas</p>
              <p className="text-sm font-bold text-slate-900">{duration}</p>
            </div>
          </div>

          <div className="flex items-center gap-2 p-3 bg-amber-50 rounded-xl">
            <Zap size={18} className="text-amber-600" fill="currentColor" />
            <div>
              <p className="text-xs text-slate-500 font-medium">Nagroda</p>
              <p className="text-sm font-bold text-amber-700">{xp} XP</p>
            </div>
          </div>

          {stats && isExpanded && (
            <>
              <div className="flex items-center gap-2 p-3 bg-green-50 rounded-xl">
                <TrendingUp size={18} className="text-green-600" />
                <div>
                  <p className="text-xs text-slate-500 font-medium">Ukończenia</p>
                  <p className="text-sm font-bold text-green-700">{stats.completionRate}%</p>
                </div>
              </div>

              <div className="flex items-center gap-2 p-3 bg-purple-50 rounded-xl">
                <User size={18} className="text-purple-600" />
                <div>
                  <p className="text-xs text-slate-500 font-medium">Uczestników</p>
                  <p className="text-sm font-bold text-purple-700">{stats.enrolledUsers}</p>
                </div>
              </div>
            </>
          )}
        </div>

        {/* Deadline Warning */}
        {timeRemaining && !isCompleted && (
          <motion.div
            initial={{ opacity: 0, y: -10 }}
            animate={{ opacity: 1, y: 0 }}
            className={cn(
              "flex items-center gap-2 p-3 rounded-xl mb-4",
              timeRemaining.isUrgent ? "bg-red-50 border border-red-200" : "bg-blue-50 border border-blue-200"
            )}
          >
            <Calendar size={18} className={timeRemaining.isUrgent ? "text-red-600" : "text-blue-600"} />
            <p className={cn("text-sm font-semibold", timeRemaining.isUrgent ? "text-red-700" : "text-blue-700")}>
              {timeRemaining.isUrgent ? "⚠️ PILNE: " : ""}
              Zostało {timeRemaining.days}d {timeRemaining.hours}h do deadline
            </p>
          </motion.div>
        )}

        {/* Expanded Content - Tabs */}
        {isExpanded && (
          <div className="mt-6">
            <div className="flex gap-2 border-b border-slate-200 mb-6">
              {(['overview', 'modules', 'achievements'] as const).map((tab) => (
                <button
                  key={tab}
                  onClick={(e) => {
                    e.stopPropagation();
                    setActiveTab(tab);
                  }}
                  className={cn(
                    "px-4 py-2 text-sm font-semibold transition-colors relative",
                    activeTab === tab ? "text-blue-600" : "text-slate-500 hover:text-slate-700"
                  )}
                >
                  {tab === 'overview' && 'Przegląd'}
                  {tab === 'modules' && 'Moduły'}
                  {tab === 'achievements' && 'Osiągnięcia'}
                  {activeTab === tab && (
                    <motion.div
                      layoutId="activeTab"
                      className="absolute bottom-0 left-0 right-0 h-0.5 bg-blue-600"
                    />
                  )}
                </button>
              ))}
            </div>

            <AnimatePresence mode="wait">
              {activeTab === 'overview' && (
                <motion.div
                  key="overview"
                  initial={{ opacity: 0, y: 10 }}
                  animate={{ opacity: 1, y: 0 }}
                  exit={{ opacity: 0, y: -10 }}
                  className="space-y-6"
                >
                  {/* Instructor */}
                  {instructor && (
                    <div className="flex items-center gap-4 p-4 bg-slate-50 rounded-xl">
                      <img src={instructor.avatar} alt={instructor.name} className="w-12 h-12 rounded-full" />
                      <div>
                        <p className="font-bold text-slate-900">{instructor.name}</p>
                        <p className="text-sm text-slate-500">{instructor.title}</p>
                      </div>
                    </div>
                  )}

                  {/* Skills */}
                  {skills.length > 0 && (
                    <div>
                      <h4 className="text-sm font-bold text-slate-700 mb-3 flex items-center gap-2">
                        <Target size={16} /> Umiejętności do zdobycia
                      </h4>
                      <div className="space-y-3">
                        {skills.map((skill, idx) => (
                          <div key={idx} className="space-y-1">
                            <div className="flex justify-between text-xs">
                              <span className="font-medium text-slate-700">{skill.name}</span>
                              <span className="text-slate-500">{skill.level}/{skill.maxLevel}</span>
                            </div>
                            <div className="h-2 bg-slate-200 rounded-full overflow-hidden">
                              <motion.div
                                initial={{ width: 0 }}
                                animate={{ width: `${(skill.level / skill.maxLevel) * 100}%` }}
                                transition={{ duration: 1, delay: idx * 0.1 }}
                                className="h-full bg-gradient-to-r from-blue-500 to-purple-500"
                              />
                            </div>
                          </div>
                        ))}
                      </div>
                    </div>
                  )}

                  {/* Prerequisites */}
                  {prerequisites.length > 0 && (
                    <div>
                      <h4 className="text-sm font-bold text-slate-700 mb-3 flex items-center gap-2">
                        <Layers size={16} /> Wymagania wstępne
                      </h4>
                      <ul className="space-y-2">
                        {prerequisites.map((prereq, idx) => (
                          <li key={idx} className="flex items-center gap-2 text-sm text-slate-600">
                            <CheckCircle size={16} className="text-green-500" />
                            {prereq}
                          </li>
                        ))}
                      </ul>
                    </div>
                  )}

                  {/* Tags */}
                  {tags.length > 0 && (
                    <div className="flex flex-wrap gap-2">
                      {tags.map((tag, idx) => (
                        <span key={idx} className="px-3 py-1 bg-slate-100 text-slate-700 rounded-full text-xs font-medium">
                          #{tag}
                        </span>
                      ))}
                    </div>
                  )}
                </motion.div>
              )}

              {activeTab === 'modules' && (
                <motion.div
                  key="modules"
                  initial={{ opacity: 0, y: 10 }}
                  animate={{ opacity: 1, y: 0 }}
                  exit={{ opacity: 0, y: -10 }}
                  className="space-y-3"
                >
                  {modules.map((module, idx) => (
                    <div
                      key={module.id}
                      className={cn(
                        "flex items-center justify-between p-4 rounded-xl border-2 transition-all",
                        module.completed 
                          ? "bg-green-50 border-green-200" 
                          : "bg-white border-slate-200 hover:border-blue-300"
                      )}
                    >
                      <div className="flex items-center gap-4">
                        <div className={cn(
                          "w-8 h-8 rounded-full flex items-center justify-center font-bold text-sm",
                          module.completed ? "bg-green-500 text-white" : "bg-slate-200 text-slate-600"
                        )}>
                          {module.completed ? <CheckCircle size={16} /> : idx + 1}
                        </div>
                        <div>
                          <p className="font-semibold text-slate-900">{module.title}</p>
                          <div className="flex items-center gap-3 mt-1">
                            <span className="text-xs text-slate-500">{module.duration}</span>
                            <span className="px-2 py-0.5 bg-slate-100 text-slate-700 rounded text-xs font-medium">
                              {module.type}
                            </span>
                          </div>
                        </div>
                      </div>
                      {!module.completed && (
                        <Play size={20} className="text-blue-600" />
                      )}
                    </div>
                  ))}
                </motion.div>
              )}

              {activeTab === 'achievements' && (
                <motion.div
                  key="achievements"
                  initial={{ opacity: 0, y: 10 }}
                  animate={{ opacity: 1, y: 0 }}
                  exit={{ opacity: 0, y: -10 }}
                  className="grid grid-cols-1 md:grid-cols-2 gap-4"
                >
                  {achievements.map((achievement) => (
                    <div
                      key={achievement.id}
                      className={cn(
                        "p-4 rounded-xl border-2 transition-all",
                        achievement.unlocked 
                          ? "bg-yellow-50 border-yellow-300" 
                          : "bg-slate-50 border-slate-200 opacity-60"
                      )}
                    >
                      <div className="flex items-start gap-3">
                        <div className={cn(
                          "p-2 rounded-lg",
                          achievement.unlocked ? "bg-yellow-400" : "bg-slate-300"
                        )}>
                          {achievement.icon}
                        </div>
                        <div className="flex-1">
                          <h5 className="font-bold text-slate-900 mb-1">{achievement.title}</h5>
                          <p className="text-xs text-slate-600 mb-2">{achievement.description}</p>
                          {achievement.progress !== undefined && !achievement.unlocked && (
                            <div className="space-y-1">
                              <div className="flex justify-between text-xs text-slate-500">
                                <span>Postęp</span>
                                <span>{achievement.progress}%</span>
                              </div>
                              <div className="h-1.5 bg-slate-200 rounded-full overflow-hidden">
                                <div 
                                  className="h-full bg-blue-500 transition-all"
                                  style={{ width: `${achievement.progress}%` }}
                                />
                              </div>
                            </div>
                          )}
                          {achievement.requirement && (
                            <p className="text-xs text-slate-500 italic mt-2">
                              Wymaganie: {achievement.requirement}
                            </p>
                          )}
                        </div>
                      </div>
                    </div>
                  ))}
                </motion.div>
              )}
            </AnimatePresence>
          </div>
        )}

        {/* CTA Button */}
        {!isExpanded && (
          <motion.button
            whileHover={{ scale: 1.02 }}
            whileTap={{ scale: 0.98 }}
            onClick={handleCardClick}
            disabled={isLocked}
            className={cn(
              "w-full mt-4 py-3 px-4 rounded-xl font-bold text-sm flex items-center justify-between transition-all",
              isLocked 
                ? "bg-slate-200 text-slate-500 cursor-not-allowed" 
                : "bg-gradient-to-r from-blue-600 to-purple-600 text-white shadow-lg hover:shadow-xl"
            )}
          >
            <span>
              {isLocked && "Odblokuj poprzednie lekcje"}
              {isCompleted && "Powtórz lekcję"}
              {isInProgress && "Kontynuuj naukę"}
              {status === 'unlocked' && "Rozpocznij"}
            </span>
            <ArrowRight size={18} />
          </motion.button>
        )}

        {isExpanded && !isLocked && (
          <motion.button
            initial={{ opacity: 0, y: 20 }}
            animate={{ opacity: 1, y: 0 }}
            whileHover={{ scale: 1.02 }}
            whileTap={{ scale: 0.98 }}
            onClick={onClick}
            className="w-full mt-8 py-4 px-6 rounded-xl font-bold text-base bg-gradient-to-r from-blue-600 to-purple-600 text-white shadow-lg hover:shadow-xl transition-all flex items-center justify-center gap-2"
          >
            <Play size={20} />
            <span>
              {isCompleted && "Rozpocznij ponownie"}
              {isInProgress && "Wróć do lekcji"}
              {status === 'unlocked' && "Zacznij teraz"}
            </span>
          </motion.button>
        )}
      </div>

      {/* Locked Overlay */}
      {isLocked && (
        <div className="absolute inset-0 backdrop-blur-[2px] bg-white/30 flex items-center justify-center z-20">
          <div className="text-center p-6">
            <Lock size={48} className="text-slate-400 mx-auto mb-4" />
            <p className="text-slate-600 font-semibold mb-2">Zablokowana lekcja</p>
            {nextAvailableDate && (
              <p className="text-xs text-slate-500">
                Dostępna od: {nextAvailableDate.toLocaleDateString('pl-PL')}
              </p>
            )}
          </div>
        </div>
      )}
    </motion.div>
  );
};
