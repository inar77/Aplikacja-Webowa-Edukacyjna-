// ============================================================
// ULEPSZONA KARTA LEKCJI
// ============================================================
const ElectricianLessonCard = ({ 
  lesson, 
  isCompleted, 
  isLocked, 
  isRecommended,
  onStart 
}) => {
  const typeConfig = LESSON_TYPE_CONFIG[lesson.type] || LESSON_TYPE_CONFIG.teoria;
  const TypeIcon = typeConfig.icon;
  
  return (
    <div 
      className={`
        relative rounded-2xl border-2 transition-all duration-300
        ${isLocked 
          ? 'bg-gray-100 border-gray-200 opacity-60 cursor-not-allowed' 
          : isCompleted
            ? `${typeConfig.bgLight} ${typeConfig.borderColor} hover:shadow-md`
            : 'bg-white border-gray-200 hover:shadow-lg hover:border-gray-300 cursor-pointer'
        }
        ${isRecommended ? 'ring-2 ring-yellow-400 ring-offset-2' : ''}
      `}
      onClick={() => !isLocked && onStart(lesson)}
    >
      {/* Rekomendowana etykieta */}
      {isRecommended && (
        <div className="absolute -top-3 left-4 px-3 py-1 bg-gradient-to-r from-yellow-400 to-orange-400 text-white text-xs font-bold rounded-full shadow-lg">
          ‚≠ê POLECANE
        </div>
      )}
      
      {/* Uko≈Ñczona znaczka */}
      {isCompleted && (
        <div className="absolute -top-2 -right-2 w-8 h-8 bg-green-500 rounded-full flex items-center justify-center shadow-lg">
          <CheckCircle className="w-5 h-5 text-white" />
        </div>
      )}
      
      {/* Zablokowana nak≈Çadka */}
      {isLocked && (
        <div className="absolute inset-0 flex items-center justify-center bg-gray-200/50 rounded-2xl">
          <Lock className="w-8 h-8 text-gray-400" />
        </div>
      )}
      
      <div className="p-5">
        {/* Nag≈Ç√≥wek z ikonƒÖ typu */}
        <div className="flex items-start gap-3 mb-3">
          <div className={`p-2 rounded-xl bg-gradient-to-br ${typeConfig.color} text-white`}>
            <TypeIcon className="w-5 h-5" />
          </div>
          <div className="flex-1">
            <span className={`text-xs font-semibold uppercase tracking-wider ${typeConfig.textColor}`}>
              {typeConfig.label}
            </span>
            <h3 className="text-lg font-bold text-gray-800 line-clamp-2">
              {lesson.title}
            </h3>
          </div>
        </div>
        
        {/* Opis */}
        <p className="text-sm text-gray-600 mb-4 line-clamp-2">
          {lesson.description}
        </p>
        
        {/* Meta info */}
        <div className="flex items-center gap-4 text-xs text-gray-500 mb-4">
          <span className="flex items-center gap-1">
            <Clock className="w-4 h-4" />
            {lesson.duration} min
          </span>
          <span className="flex items-center gap-1 text-yellow-600 font-semibold">
            <Zap className="w-4 h-4" />
            +{lesson.xp} XP
          </span>
          {lesson.difficulty && (
            <span className="flex items-center gap-1">
              {[...Array(lesson.difficulty)].map((_, i) => (
                <Star key={i} className="w-3 h-3 fill-yellow-400 text-yellow-400" />
              ))}
            </span>
          )}
        </div>
        
        {/* Przycisk */}
        <button
          disabled={isLocked}
          className={`
            w-full py-2.5 rounded-xl font-semibold text-sm flex items-center justify-center gap-2 transition-all
            ${isCompleted
              ? 'bg-green-100 text-green-700 hover:bg-green-200'
              : isLocked
                ? 'bg-gray-200 text-gray-400 cursor-not-allowed'
                : `bg-gradient-to-r ${typeConfig.color} text-white hover:shadow-md`
            }
          `}
        >
          {isCompleted ? (
            <>‚Üª Powt√≥rz</>
          ) : isLocked ? (
            <>üîí Zablokowane</>
          ) : (
            <>Rozpocznij <ChevronRight className="w-4 h-4" /></>
          )}
        </button>
      </div>
    </div>
  );
};

export { ElectricianProgress, ElectricianLessonCard, AnimatedWire, AnimatedStreak, LESSON_TYPE_CONFIG };
