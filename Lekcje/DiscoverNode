// Sample careers to explore
const EXPLORABLE_CAREERS = [
  {
    id: 'instalator-pv',
    name: 'Instalator fotowoltaiki',
    zone: 'energy',
    description: 'Monta≈º i serwis system√≥w fotowoltaicznych',
    icon: '‚òÄÔ∏è',
    salary: { min: 7000, max: 15000 },
    demand: 'very-high' as const,
    demandChange: '+35%',
    timeToEntry: '2-3 miesiƒÖce',
    matchScore: 85,
    explored: true,
    bookmarked: true,
    skills: ['Instalacje elektryczne', 'Praca na wysoko≈õci', 'Systemy DC'],
    dailyWork: 'Monta≈º paneli, pod≈ÇƒÖczanie falownik√≥w, diagnostyka'
  },
  {
    id: 'automatyk',
    name: 'Automatyk przemys≈Çowy',
    zone: 'automation',
