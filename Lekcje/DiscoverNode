'use client';

import React, { useState, useMemo } from 'react';
import { motion, AnimatePresence } from 'framer-motion';
import {
  Compass,
  Sparkles,
  Clock,
  TrendingUp,
  Star,
  Bookmark,
  BookmarkCheck,
  Play,
  ChevronRight,
  Filter,
  Search,
  Zap,
  Users,
  DollarSign,
  GraduationCap,
  Map,
  Shuffle,
  Heart,
  Eye,
  Lock,
  Unlock
} from 'lucide-react';

