'use client';

import React, { useState, useMemo } from 'react';
import { motion, AnimatePresence } from 'framer-motion';
import {
  ArrowRight,
  Zap,
  Clock,
  TrendingUp,
  Briefcase,
  ChevronDown,
  Sparkles,
  Target,
  BookOpen,
  GraduationCap,
  ArrowLeftRight,
  Check
} from 'lucide-react';

interface Career {
  id: string;
  name: string;
  icon: string;
  avgSalary: string;
  demand: 'high' | 'medium' | 'low';
}

interface SkillTransfer {
  skill: string;
  transferPercent: number;
  additionalTraining?: string;
}

interface TransferPath {
  from: Career;
  to: Career;
  overallTransfer: number;
  timeToTransition: string;
  skills: SkillTransfer[];
  bridgingCourses: string[];
}

