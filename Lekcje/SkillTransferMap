  { id: 'technik-it', name: 'Technik IT', icon: 'üíª', avgSalary: '6-14k PLN', demand: 'high' },
  { id: 'serwisant', name: 'Serwisant urzƒÖdze≈Ñ', icon: 'üîß', avgSalary: '5-10k PLN', demand: 'medium' },
  { id: 'instalator-pv', name: 'Instalator PV', icon: '‚òÄÔ∏è', avgSalary: '7-15k PLN', demand: 'high' },
  { id: 'projektant', name: 'Projektant instalacji', icon: 'üìê', avgSalary: '10-20k PLN', demand: 'medium' },
];

