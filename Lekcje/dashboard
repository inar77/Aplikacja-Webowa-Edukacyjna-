'use client';

import React, { useState, useEffect } from 'react';
import { motion, AnimatePresence } from 'framer-motion';
import { 
  Play, Clock, Zap, Trophy, Target, TrendingUp, 
  BookOpen, Award, Users, Calendar, ChevronRight,
  Flame, Star, CheckCircle, Lock, Sparkles,
  Brain, Heart, Coffee, Moon, Sun, Sunset
} from 'lucide-react';
import { 
  UserProgress, LearningPath, DailyChallenge, 
  Achievement, Notification, RecommendedLesson,
  CompetencyData, WeeklyGoal
} from '../types/dashboard.types';

// ============================================================
// SEKCJA 1: PERSONALIZED WELCOME HERO
// ============================================================

interface WelcomeHeroProps {
  userName: string;
  currentStreak: number;
  totalXP: number;
  level: number;
  lastActivity?: Date;
  mood?: 'energetic' | 'tired' | 'focused' | 'neutral';
}

export const WelcomeHero: React.FC<WelcomeHeroProps> = ({
  userName,
  currentStreak,
  totalXP,
  level,
  lastActivity,
  mood = 'neutral'
}) => {
  const [currentTime, setCurrentTime] = useState(new Date());
  const [greeting, setGreeting] = useState('');
  const [timeIcon, setTimeIcon] = useState<React.ReactNode>(null);

  useEffect(() => {
    const timer = setInterval(() => setCurrentTime(new Date()), 60000);
    return () => clearInterval(timer);
  }, []);

  useEffect(() => {
    const hour = currentTime.getHours();
    if (hour >= 5 && hour < 12) {
      setGreeting('Dzie≈Ñ dobry');
      setTimeIcon(<Sun className="w-6 h-6 text-amber-400" />);
    } else if (hour >= 12 && hour < 18) {
      setGreeting('Cze≈õƒá');
      setTimeIcon(<Sunset className="w-6 h-6 text-orange-400" />);
    } else if (hour >= 18 && hour < 22) {
      setGreeting('Dobry wiecz√≥r');
      setTimeIcon(<Moon className="w-6 h-6 text-indigo-400" />);
    } else {
      setGreeting('Pracujesz nocƒÖ?');
      setTimeIcon(<Coffee className="w-6 h-6 text-amber-600" />);
    }
  }, [currentTime]);

  const getMoodMessage = () => {
    switch (mood) {
      case 'energetic':
        return '≈öwietna energia! Czas na ambitnƒÖ lekcjƒô üí™';
      case 'tired':
        return 'Mo≈ºe kr√≥tka, lekka sesja? 15 minut wystarczy';
      case 'focused':
        return 'Widzimy skupienie - wykorzystaj to!';
      default:
        return 'Gotowy na naukƒô?';
    }
  };

  const xpToNextLevel = (level + 1) * 500;
  const xpProgress = (totalXP % 500) / 500 * 100;

  return (
    <motion.section
      initial={{ opacity: 0, y: -20 }}
      animate={{ opacity: 1, y: 0 }}
      transition={{ duration: 0.6 }}
      className="relative overflow-hidden rounded-3xl mb-8"
      style={{
        background: 'linear-gradient(135deg, #1e1b4b 0%, #312e81 50%, #4c1d95 100%)',
        padding: '32px',
      }}
    >
      {/* Animated background particles */}
      <div className="absolute inset-0 overflow-hidden pointer-events-none">
        {[...Array(20)].map((_, i) => (
          <motion.div
            key={i}
            className="absolute w-2 h-2 bg-white/10 rounded-full"
            initial={{ 
              x: Math.random() * 100 + '%', 
              y: Math.random() * 100 + '%',
              scale: Math.random() * 0.5 + 0.5
            }}
            animate={{ 
              y: [null, '-20%', null],
              opacity: [0.1, 0.3, 0.1]
            }}
            transition={{ 
              duration: Math.random() * 5 + 5, 
              repeat: Infinity,
              ease: 'easeInOut'
            }}
          />
        ))}
      </div>

      {/* Main content */}
      <div className="relative z-10">
        {/* Top row: Greeting + Time */}
        <div className="flex items-center justify-between mb-6">
          <div className="flex items-center gap-3">
            {timeIcon}
            <div>
              <motion.h1 
                className="text-3xl md:text-4xl font-bold text-white"
                initial={{ opacity: 0, x: -20 }}
                animate={{ opacity: 1, x: 0 }}
                transition={{ delay: 0.2 }}
              >
                {greeting}, <span className="text-amber-400">{userName}</span>!
              </motion.h1>
              <motion.p 
                className="text-white/70 mt-1"
                initial={{ opacity: 0 }}
                animate={{ opacity: 1 }}
                transition={{ delay: 0.4 }}
              >
                {getMoodMessage()}
              </motion.p>
            </div>
          </div>

          {/* Streak badge */}
          <motion.div
            initial={{ scale: 0 }}
            animate={{ scale: 1 }}
            transition={{ delay: 0.3, type: 'spring' }}
            className="flex items-center gap-2 px-4 py-2 rounded-full"
            style={{ background: 'rgba(251, 146, 60, 0.2)', border: '1px solid rgba(251, 146, 60, 0.3)' }}
          >
            <Flame className="w-5 h-5 text-orange-400" />
            <span className="text-orange-300 font-bold">{currentStreak} dni</span>
          </motion.div>
        </div>

        {/* Stats row */}
        <div className="grid grid-cols-2 md:grid-cols-4 gap-4 mb-6">
          {/* Level */}
          <motion.div
            initial={{ opacity: 0, y: 20 }}
            animate={{ opacity: 1, y: 0 }}
            transition={{ delay: 0.3 }}
            className="bg-white/5 backdrop-blur rounded-2xl p-4 border border-white/10"
          >
            <div className="flex items-center gap-2 mb-2">
              <Star className="w-4 h-4 text-amber-400" />
              <span className="text-white/60 text-sm">Poziom</span>
            </div>
            <div className="text-2xl font-bold text-white">{level}</div>
            <div className="mt-2">
              <div className="h-1.5 bg-white/10 rounded-full overflow-hidden">
                <motion.div
                  initial={{ width: 0 }}
                  animate={{ width: `${xpProgress}%` }}
                  transition={{ delay: 0.5, duration: 1 }}
                  className="h-full bg-gradient-to-r from-amber-400 to-orange-500 rounded-full"
                />
              </div>
              <p className="text-xs text-white/40 mt-1">{totalXP % 500}/{500} XP</p>
            </div>
          </motion.div>

          {/* Total XP */}
          <motion.div
            initial={{ opacity: 0, y: 20 }}
            animate={{ opacity: 1, y: 0 }}
            transition={{ delay: 0.4 }}
            className="bg-white/5 backdrop-blur rounded-2xl p-4 border border-white/10"
          >
            <div className="flex items-center gap-2 mb-2">
              <Zap className="w-4 h-4 text-yellow-400" />
              <span className="text-white/60 text-sm">≈ÅƒÖczne XP</span>
            </div>
            <div className="text-2xl font-bold text-white">
              {totalXP.toLocaleString()}
            </div>
            <p className="text-xs text-green-400 mt-1">+150 dzisiaj</p>
          </motion.div>

          {/* Completed lessons */}
          <motion.div
            initial={{ opacity: 0, y: 20 }}
            animate={{ opacity: 1, y: 0 }}
            transition={{ delay: 0.5 }}
            className="bg-white/5 backdrop-blur rounded-2xl p-4 border border-white/10"
          >
            <div className="flex items-center gap-2 mb-2">
              <BookOpen className="w-4 h-4 text-blue-400" />
              <span className="text-white/60 text-sm">Uko≈Ñczone</span>
            </div>
            <div className="text-2xl font-bold text-white">24</div>
            <p className="text-xs text-white/40 mt-1">lekcje</p>
          </motion.div>

          {/* Achievements */}
          <motion.div
            initial={{ opacity: 0, y: 20 }}
            animate={{ opacity: 1, y: 0 }}
            transition={{ delay: 0.6 }}
            className="bg-white/5 backdrop-blur rounded-2xl p-4 border border-white/10"
          >
            <div className="flex items-center gap-2 mb-2">
              <Trophy className="w-4 h-4 text-purple-400" />
              <span className="text-white/60 text-sm">Odznaki</span>
            </div>
            <div className="text-2xl font-bold text-white">8</div>
            <p className="text-xs text-purple-400 mt-1">2 nowe!</p>
          </motion.div>
        </div>

        {/* Quick action CTA */}
        <motion.button
          initial={{ opacity: 0, y: 20 }}
          animate={{ opacity: 1, y: 0 }}
          transition={{ delay: 0.7 }}
          whileHover={{ scale: 1.02, y: -2 }}
          whileTap={{ scale: 0.98 }}
          className="w-full md:w-auto px-8 py-4 rounded-2xl font-semibold text-lg flex items-center justify-center gap-3 transition-all"
          style={{
            background: 'linear-gradient(135deg, #f59e0b 0%, #ea580c 100%)',
            boxShadow: '0 10px 40px rgba(245, 158, 11, 0.3)'
          }}
        >
          <Play className="w-5 h-5" fill="currentColor" />
          Kontynuuj naukƒô
          <ChevronRight className="w-5 h-5" />
        </motion.button>
      </div>
    </motion.section>
  );
};

// ============================================================
// SEKCJA 2: LEARNING PATH VISUALIZATION
// ============================================================

interface LearningPathModule {
  id: string;
  title: string;
  icon: string;
  totalLessons: number;
  completedLessons: number;
  totalXP: number;
  earnedXP: number;
  estimatedHours: number;
  status: 'locked' | 'available' | 'in-progress' | 'completed';
  unlockRequirement?: string;
}

interface LearningPathSectionProps {
  modules: LearningPathModule[];
  currentModuleId: string;
  totalProgress: number;
  estimatedCompletion: string;
  profession: string;
}

export const LearningPathSection: React.FC<LearningPathSectionProps> = ({
  modules,
  currentModuleId,
  totalProgress,
  estimatedCompletion,
  profession
}) => {
  const [expandedModule, setExpandedModule] = useState<string | null>(currentModuleId);

  const getStatusColor = (status: LearningPathModule['status']) => {
    switch (status) {
      case 'completed': return { bg: 'bg-green-500/20', border: 'border-green-500/50', text: 'text-green-400' };
      case 'in-progress': return { bg: 'bg-amber-500/20', border: 'border-amber-500/50', text: 'text-amber-400' };
      case 'available': return { bg: 'bg-blue-500/20', border: 'border-blue-500/50', text: 'text-blue-400' };
      case 'locked': return { bg: 'bg-gray-500/20', border: 'border-gray-500/30', text: 'text-gray-500' };
    }
  };

  const getStatusIcon = (status: LearningPathModule['status']) => {
    switch (status) {
      case 'completed': return <CheckCircle className="w-5 h-5 text-green-400" />;
      case 'in-progress': return <Play className="w-5 h-5 text-amber-400" fill="currentColor" />;
      case 'available': return <Target className="w-5 h-5 text-blue-400" />;
      case 'locked': return <Lock className="w-5 h-5 text-gray-500" />;
    }
  };

  return (
    <motion.section
      initial={{ opacity: 0, y: 20 }}
      animate={{ opacity: 1, y: 0 }}
      transition={{ delay: 0.2 }}
      className="mb-8"
    >
      {/* Header */}
      <div className="flex items-center justify-between mb-6">
        <div>
          <h2 className="text-2xl font-bold text-white flex items-center gap-3">
            <div className="w-10 h-10 rounded-xl bg-gradient-to-br from-violet-500 to-purple-600 flex items-center justify-center">
              <Target className="w-5 h-5 text-white" />
            </div>
            Twoja ≈öcie≈ºka: {profession}
          </h2>
          <p className="text-white/60 mt-1">
            Uko≈Ñczysz za oko≈Ço {estimatedCompletion}
          </p>
        </div>

        {/* Overall progress */}
        <div className="text-right">
          <div className="text-3xl font-bold text-white">{totalProgress}%</div>
          <p className="text-white/60 text-sm">uko≈Ñczono</p>
        </div>
      </div>

      {/* Overall progress bar */}
      <div className="h-3 bg-white/10 rounded-full overflow-hidden mb-8">
        <motion.div
          initial={{ width: 0 }}
          animate={{ width: `${totalProgress}%` }}
          transition={{ duration: 1.5, ease: 'easeOut' }}
          className="h-full rounded-full relative"
          style={{
            background: 'linear-gradient(90deg, #22c55e 0%, #84cc16 50%, #eab308 100%)'
          }}
        >
          <motion.div
            className="absolute right-0 top-1/2 -translate-y-1/2 w-4 h-4 bg-white rounded-full shadow-lg"
            animate={{ scale: [1, 1.2, 1] }}
            transition={{ duration: 2, repeat: Infinity }}
          />
        </motion.div>
      </div>

      {/* Modules timeline */}
      <div className="relative">
        {/* Connecting line */}
        <div className="absolute left-6 top-0 bottom-0 w-0.5 bg-gradient-to-b from-green-500 via-amber-500 to-gray-600" />

        {/* Module cards */}
        <div className="space-y-4">
          {modules.map((module, index) => {
            const colors = getStatusColor(module.status);
            const isExpanded = expandedModule === module.id;
            const progressPercent = module.totalLessons > 0 
              ? Math.round((module.completedLessons / module.totalLessons) * 100) 
              : 0;

            return (
              <motion.div
                key={module.id}
                initial={{ opacity: 0, x: -20 }}
                animate={{ opacity: 1, x: 0 }}
                transition={{ delay: index * 0.1 }}
                className="relative pl-16"
              >
                {/* Timeline node */}
                <motion.div
                  className={`absolute left-3 w-6 h-6 rounded-full ${colors.bg} ${colors.border} border-2 flex items-center justify-center z-10`}
                  whileHover={{ scale: 1.2 }}
                >
                  {module.status === 'completed' && (
                    <CheckCircle className="w-4 h-4 text-green-400" />
                  )}
                  {module.status === 'in-progress' && (
                    <motion.div
                      className="w-2 h-2 bg-amber-400 rounded-full"
                      animate={{ scale: [1, 1.5, 1] }}
                      transition={{ duration: 1.5, repeat: Infinity }}
                    />
                  )}
                </motion.div>

                {/* Module card */}
                <motion.div
                  className={`rounded-2xl border ${colors.border} ${colors.bg} backdrop-blur overflow-hidden cursor-pointer transition-all`}
                  onClick={() => setExpandedModule(isExpanded ? null : module.id)}
                  whileHover={{ scale: 1.01 }}
                >
                  {/* Card header */}
                  <div className="p-4 flex items-center gap-4">
                    {/* Icon */}
                    <div className={`w-12 h-12 rounded-xl ${colors.bg} flex items-center justify-center text-2xl`}>
                      {module.icon}
                    </div>

                    {/* Info */}
                    <div className="flex-1">
                      <div className="flex items-center gap-2">
                        <h3 className={`font-semibold ${module.status === 'locked' ? 'text-gray-400' : 'text-white'}`}>
                          {module.title}
                        </h3>
                        {getStatusIcon(module.status)}
                      </div>
                      <div className="flex items-center gap-4 mt-1 text-sm">
                        <span className="text-white/60">
                          {module.completedLessons}/{module.totalLessons} lekcji
                        </span>
                        <span className="text-white/60">
                          ~{module.estimatedHours}h
                        </span>
                        <span className={colors.text}>
                          {module.earnedXP}/{module.totalXP} XP
                        </span>
                      </div>
                    </div>

                    {/* Progress circle */}
                    <div className="relative w-14 h-14">
                      <svg className="w-14 h-14 -rotate-90">
                        <circle
                          cx="28"
                          cy="28"
                          r="24"
                          fill="none"
                          stroke="rgba(255,255,255,0.1)"
                          strokeWidth="4"
                        />
                        <motion.circle
                          cx="28"
                          cy="28"
                          r="24"
                          fill="none"
                          stroke={module.status === 'completed' ? '#22c55e' : module.status === 'in-progress' ? '#f59e0b' : '#6b7280'}
                          strokeWidth="4"
                          strokeLinecap="round"
                          strokeDasharray={`${progressPercent * 1.51} 151`}
                          initial={{ strokeDasharray: '0 151' }}
                          animate={{ strokeDasharray: `${progressPercent * 1.51} 151` }}
                          transition={{ duration: 1, delay: index * 0.1 }}
                        />
                      </svg>
                      <div className="absolute inset-0 flex items-center justify-center">
                        <span className={`text-sm font-bold ${colors.text}`}>{progressPercent}%</span>
                      </div>
                    </div>

                    {/* Expand indicator */}
                    <motion.div
                      animate={{ rotate: isExpanded ? 90 : 0 }}
                      transition={{ duration: 0.2 }}
                    >
                      <ChevronRight className="w-5 h-5 text-white/40" />
                    </motion.div>
                  </div>

                  {/* Expanded content */}
                  <AnimatePresence>
                    {isExpanded && module.status !== 'locked' && (
                      <motion.div
                        initial={{ height: 0, opacity: 0 }}
                        animate={{ height: 'auto', opacity: 1 }}
                        exit={{ height: 0, opacity: 0 }}
                        transition={{ duration: 0.3 }}
                        className="border-t border-white/10"
                      >
                        <div className="p-4 space-y-3">
                          {/* Sample lessons preview */}
                          {[1, 2, 3].map((lessonNum) => (
                            <div
                              key={lessonNum}
                              className="flex items-center gap-3 p-3 rounded-xl bg-white/5 hover:bg-white/10 transition-colors"
                            >
                              <div className={`w-8 h-8 rounded-lg flex items-center justify-center text-sm font-medium ${
                                lessonNum <= module.completedLessons 
                                  ? 'bg-green-500/20 text-green-400' 
                                  : 'bg-white/10 text-white/60'
                              }`}>
                                {lessonNum <= module.completedLessons ? '‚úì' : lessonNum}
                              </div>
                              <span className={lessonNum <= module.completedLessons ? 'text-white/60' : 'text-white'}>
                                Lekcja {lessonNum}: {module.title} - Podstawy {lessonNum}
                              </span>
                              {lessonNum === module.completedLessons + 1 && (
                                <span className="ml-auto px-2 py-1 rounded-full bg-amber-500/20 text-amber-400 text-xs">
                                  Nastƒôpna
                                </span>
                              )}
                            </div>
                          ))}

                          {/* Start/Continue button */}
                          <motion.button
                            whileHover={{ scale: 1.02 }}
                            whileTap={{ scale: 0.98 }}
                            className="w-full py-3 rounded-xl font-semibold flex items-center justify-center gap-2"
                            style={{
                              background: module.status === 'completed' 
                                ? 'rgba(34, 197, 94, 0.2)' 
                                : 'linear-gradient(135deg, #7c3aed 0%, #6366f1 100%)'
                            }}
                          >
                            {module.status === 'completed' ? (
                              <>
                                <CheckCircle className="w-5 h-5 text-green-400" />
                                <span className="text-green-400">Uko≈Ñczono - Powt√≥rz</span>
                              </>
                            ) : (
                              <>
                                <Play className="w-5 h-5" fill="currentColor" />
                                <span className="text-white">
                                  {module.completedLessons > 0 ? 'Kontynuuj' : 'Rozpocznij'}
                                </span>
                              </>
                            )}
                          </motion.button>
                        </div>
                      </motion.div>
                    )}
                  </AnimatePresence>

                  {/* Locked message */}
                  {module.status === 'locked' && (
                    <div className="px-4 pb-4">
                      <div className="flex items-center gap-2 text-gray-500 text-sm">
                        <Lock className="w-4 h-4" />
                        <span>{module.unlockRequirement || 'Uko≈Ñcz poprzedni modu≈Ç'}</span>
                      </div>
                    </div>
                  )}
                </motion.div>
              </motion.div>
            );
          })}
        </div>
      </div>
    </motion.section>
  );
};

// ============================================================
// SEKCJA 3: DAILY CHALLENGE & QUICK ACTIONS
// ============================================================

interface QuickActionsSectionProps {
  dailyChallenge: DailyChallenge;
  lastLesson: {
    id: string;
    title: string;
    module: string;
    progress: number;
    thumbnail?: string;
  };
  quickQuizAvailable: boolean;
  recommendedVideo?: {
    id: string;
    title: string;
    duration: string;
    thumbnail?: string;
  };
  onStartChallenge: () => void;
  onContinueLesson: () => void;
  onStartQuiz: () => void;
  onWatchVideo: () => void;
}

export const QuickActionsSection: React.FC<QuickActionsSectionProps> = ({
  dailyChallenge,
  lastLesson,
  quickQuizAvailable,
  recommendedVideo,
  onStartChallenge,
  onContinueLesson,
  onStartQuiz,
  onWatchVideo
}) => {
  const challengeTimeLeft = () => {
    const now = new Date();
    const endOfDay = new Date(now);
    endOfDay.setHours(23, 59, 59, 999);
    const diff = endOfDay.getTime() - now.getTime();
    const hours = Math.floor(diff / (1000 * 60 * 60));
    const minutes = Math.floor((diff % (1000 * 60 * 60)) / (1000 * 60));
    return `${hours}h ${minutes}m`;
  };

  return (
    <motion.section
      initial={{ opacity: 0, y: 20 }}
      animate={{ opacity: 1, y: 0 }}
      transition={{ delay: 0.4 }}
      className="mb-8"
    >
      <h2 className="text-xl font-bold text-white mb-4 flex items-center gap-2">
        <Sparkles className="w-5 h-5 text-amber-400" />
        Szybkie akcje
      </h2>

      <div className="grid grid-cols-1 md:grid-cols-2 gap-4">
        {/* Continue last lesson */}
        <motion.div
          whileHover={{ scale: 1.02, y: -4 }}
          whileTap={{ scale: 0.98 }}
          onClick={onContinueLesson}
          className="relative overflow-hidden rounded-2xl cursor-pointer group"
          style={{
            background: 'linear-gradient(135deg, #1e40af 0%, #3b82f6 100%)',
            padding: '24px'
          }}
        >
          {/* Background decoration */}
          <div className="absolute top-0 right-0 w-32 h-32 bg-white/10 rounded-full -translate-y-1/2 translate-x-1/2" />
          
          <div className="relative z-10">
            <div className="flex items-start justify-between mb-4">
              <div className="w-12 h-12 rounded-xl bg-white/20 flex items-center justify-center">
                <Play className="w-6 h-6 text-white" fill="currentColor" />
              </div>
              <span className="px-3 py-1 rounded-full bg-white/20 text-white text-sm">
                {lastLesson.progress}% uko≈Ñczone
              </span>
            </div>

            <h3 className="text-lg font-bold text-white mb-1">Kontynuuj naukƒô</h3>
            <p className="text-white/70 text-sm mb-3">{lastLesson.title}</p>
            
            {/* Progress bar */}
            <div className="h-2 bg-white/20 rounded-full overflow-hidden">
              <motion.div
                initial={{ width: 0 }}
                animate={{ width: `${lastLesson.progress}%` }}
                transition={{ duration: 1 }}
                className="h-full bg-white rounded-full"
              />
            </div>

            <div className="flex items-center gap-2 mt-3 text-white/60 text-sm">
              <BookOpen className="w-4 h-4" />
              <span>{lastLesson.module}</span>
            </div>
          </div>

          {/* Hover arrow */}
          <motion.div
            className="absolute bottom-4 right-4 opacity-0 group-hover:opacity-100 transition-opacity"
            animate={{ x: [0, 5, 0] }}
            transition={{ duration: 1.5, repeat: Infinity }}
          >
            <ChevronRight className="w-6 h-6 text-white" />
          </motion.div>
        </motion.div>

        {/* Daily challenge */}
        <motion.div
          whileHover={{ scale: 1.02, y: -4 }}
          whileTap={{ scale: 0.98 }}
          onClick={onStartChallenge}
          className="relative overflow-hidden rounded-2xl cursor-pointer group"
          style={{
            background: dailyChallenge.completed 
              ? 'linear-gradient(135deg, #15803d 0%, #22c55e 100%)'
              : 'linear-gradient(135deg, #b45309 0%, #f59e0b 100%)',
            padding: '24px'
          }}
        >
          {/* Animated sparkles for uncompleted challenge */}
          {!dailyChallenge.completed && (
            <motion.div
              className="absolute top-4 right-4"
              animate={{ rotate: [0, 15, -15, 0], scale: [1, 1.1, 1] }}
              transition={{ duration: 2, repeat: Infinity }}
            >
