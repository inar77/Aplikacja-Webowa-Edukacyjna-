function getDefaultPaths() {
  return [
    {
      id: 'frontend_dev',
      title: 'Frontend Developer',
      icon: 'üíª',
      matchScore: 75,
      salary: '8.000 - 18.000 PLN',
      // ... (reszta danych jak wy≈ºej)
    }
  ];
}

function calculateMatch(userTraits, requiredTraits) {
  let score = 0;
  let totalWeight = 0;

  Object.entries(requiredTraits).forEach(([trait, weight]) => {
    const userValue = userTraits[trait] || 0;
    score += userValue * weight;
    totalWeight += weight;
  });

  return totalWeight > 0 ? Math.min(Math.round((score / totalWeight) * 100), 99) : 50;
}

