              {workStyleOptions.map(option => {
                const Icon = option.icon;
                const isSelected = userData.workStyle.includes(option.id);
                
                return (
                  <button
                    key={option.id}
                    onClick={() => handleSelect('workStyle', option.id, true)}
                    className={`
                      p-4 rounded-lg border-2 transition-all
                      ${isSelected 
